html
	include header.pug
	script.
		$("form").attr('autocomplete', 'off');
	style.
		.shadow-lg {
			box-shadow: 0 0rem 3rem rgba(0,0,0,.175)!important;
		}
	body
		.container.mt-5.pt-5
			.offset-md-3.col-md-6.shadow-lg.p-4.mb-3.mt-5(style='background-color:#F8F9F9;box-shadow: 0px 4px 10px;')
				form(method='post' action='/page'  autocomplete="off")
					h4.text-center 
						|Login
					.form-group 
						label(for='') 
							| Email Address
						input#email.form-control(type='text' name='email' value="")
					.form-group
						label(for='Password') 
							| Password
						input#password.form-control(type='password' name='password' value="")
					.col-md-12
						.row
							.col-md-6
								input.btn.btn-dark.form-control.mb-1.w-100(type='submit', value='Sign in')
							.col-md-6
								a.input.btn.btn-info.form-control(type='button', value='sign in', href='/signup') Sign up
						a(href='javascript:').frgt-pwd Forgot Password? 
